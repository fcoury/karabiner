{
  "title": "Change Tab to Control",
  "rules": [{
    "description": "Use Control if Tab is held.",
    "manipulators": [{
      "type": "basic",
      "from": {
        "key_code": "tab",
        "modifiers": {
          "optional": [
            "any"
          ]
        }
      },
      "to": [{
        "key_code": "left_control",
        "lazy": true
      }],
      "to_if_alone": [{
        "key_code": "tab"
      }]
    }]
  }]
}
